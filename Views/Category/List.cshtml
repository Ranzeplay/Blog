@model Dictionary<string, int>
@{
    ViewData["Title"] = "List";
}

<h1>Categories</h1>

<form class="form-inline" asp-controller="Category" asp-action="List" method="get">
    <label class="sr-only" for="inlineFormInput">Search blog</label>
    <input type="text" class="form-control mr-4 mb-2" name="query" id="inlineFormInput" placeholder="Search category">

    <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td><a asp-controller="Category" asp-action="Detail" asp-route-name="@category.Key" calss="btn btn-link">@category.Key</a></td>
                <td>@category.Value</td>
            </tr>
        }
    </tbody>
</table>
